<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/btCheckPermission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHECK PERMISSION"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/btRequestPermission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REQUEST PERMISSION"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btCheckPermission"
        />

    <Button
        android:id="@+id/btRevokePermission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="revoke PERMISSION"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btRequestPermission"
        />

</androidx.constraintlayout.widget.ConstraintLayout>